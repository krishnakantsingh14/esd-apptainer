    # Build Arbor
    #####################################################################
    echo "=== Building Arbor ==="
    cd /opt/src/arbor-src
    # Submodules already initialized via host clone with --recurse-submodules
    export PATH=$MPI_PATH/bin:$PATH

    mkdir -p build && cd build  # Fresh start
    export CUDA_HOME=${CUDA_ROOT}
    export PATH=$MPI_PATH/bin:$PATH
    export LD_LIBRARY_PATH=$MPI_PATH/lib:$UCX_PATH/lib:$PMIX_PATH/lib:$LD_LIBRARY_PATH
    export CC=${MPI_PATH}/bin/mpicc
    export CXX=${MPI_PATH}/bin/mpicxx
#    cmake .. \
#      -DARB_GPU=cuda \
#      -DCMAKE_CUDA_ARCHITECTURES="70;80" \
#      -DARB_ARCH=native \
#      -DARB_WITH_MPI=ON \
#      -DARB_VECTORIZE=ON \
#      -DCMAKE_CUDA_FLAGS="--allow-unsupported-compiler" \
#      -DCMAKE_INSTALL_PREFIX=/opt/installarbor

    cmake .. \
      -DARB_GPU=cuda \
      -DCMAKE_CUDA_ARCHITECTURES="70;80" \
      -DARB_ARCH=native \
      -DARB_WITH_MPI=ON \
      -DARB_VECTORIZE=ON \
      -DCMAKE_CUDA_FLAGS="--allow-unsupported-compiler" \
      -DCMAKE_INSTALL_PREFIX=/opt/installarbor


    make -j$(nproc) VERBOSE=1
    make install
    make -j$(nproc) examples
    mv bin/* /opt/installarbor/bin/

    ##########
    # clean up
    #########
    rm -f /opt/src/*.tar.gz          
    rm -f /opt/src/*.tar.bz2         
    rm -rf /opt/src/libfabric-1.21.1/ 
    rm -rf /opt/src/openmpi-5.0.5/       
    rm -rf /opt/src/arbor-src/       
    rm -rf /opt/src/ucx-1.19.0               
    rm -rf /opt/src/pmix-5.0.3/
    #rm -f cuda-repo-*.rpm          


%environment
    export CUDA_ROOT=/usr/local/cuda-12.2
    export PMIX_PATH=/opt/pmix
    export UCX_PATH=/opt/ucx
#    export LIBFABRIC_PATH=/opt/libfabric
    export MPI_PATH=/opt/openmpi
    export PATH=$MPI_PATH/bin:$PATH
    export LD_LIBRARY_PATH=/opt/rh/gcc-toolset-12/root/usr/lib64:$MPI_PATH/lib:$UCX_PATH/lib:$PMIX_PATH/lib:/usr/lib64:$LD_LIBRARY_PATH

%runscript
    echo "Container ready. Use srun SLURM + PMIx outside."
    exec "$@"
